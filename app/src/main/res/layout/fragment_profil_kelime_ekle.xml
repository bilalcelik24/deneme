<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/FragmentProfilKelimeEkleTxtKelime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Kelime"
        android:background="@drawable/edit_text"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:inputType="textPersonName"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <EditText
        android:id="@+id/FragmentProfilKelimeEkleTxtOrnk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="Örnek Cümle"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/FragmentProfilKelimeEkleTxtKelime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FragmentProfilKelimeEkleTxtKelime"
        app:layout_constraintTop_toBottomOf="@+id/FragmentProfilKelimeEkleTxtKelime" />

    <Button
        android:id="@+id/FragmentProfilKelimeEkleBtnEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Ekle"
        android:background="@drawable/drawable_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <EditText
        android:id="@+id/FragmentProfilKelimeEkleAnlam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="Anlamı"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/FragmentProfilKelimeEkleTxtOrnk"
        app:layout_constraintStart_toStartOf="@+id/FragmentProfilKelimeEkleTxtOrnk"
        app:layout_constraintTop_toBottomOf="@+id/FragmentProfilKelimeEkleTxtOrnk" />

</android.support.constraint.ConstraintLayout>